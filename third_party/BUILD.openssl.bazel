# package(default_visibility = ["//visibility:public"])

cc_import(
  name = "_ssl",
  hdrs = glob(["include/openssl/*.h"]),
  static_library = "lib/libssl.lib",
)

cc_import(
  name = "_crypto",
  hdrs = glob(["include/openssl/*.h"]),
  static_library = "lib/libcrypto.lib",
)

cc_library(
  name = "ssl",
  hdrs = glob(["include/openssl/*.h"]),
  strip_include_prefix = "include/",
  visibility = ["//visibility:public"],
  deps = [":_ssl"],
)

cc_library(
  name = "crypto",
  hdrs = glob(["include/openssl/*.h"]),
  strip_include_prefix = "include/",
  visibility = ["//visibility:public"],
  deps = [":_ssl"],
)